<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8">
<script>
function likes() {
if(typeof(Storage) !== "undefined") {
    
                   if(localStorage.like) 
                   {
                        localStorage.like = Number(localStorage.like)+1;
                   } 
                    else {
                                localStorage.like = 1;
                         }
    document.getElementById("result").innerHTML =  "LIKES "+localStorage.like;
 } else {
        document.getElementById("result1").innerHTML = "Sorry, your browser does not support web storage...";
    }
     
                  }
function dislike() {
    if(typeof(Storage) !== "undefined") {
        if (localStorage.dl) 
        {
            localStorage.dl = Number(localStorage.dl)+1;
        } 
        else {
                    localStorage.dl = 1;
             }
document.getElementById("result1").innerHTML = "DISLIKES "+localStorage.dl;
       
             }
else {
        document.getElementById("result1").innerHTML = "Sorry, your browser does not support web storage...";
    }
 } 
</script>
</head>
<body onload="abc()">
<script type="text/javascript">
function abc(){

	if(typeof(Storage) !== "undefined") {
	if (localStorage.like == "undefined") 
        {
		document.getElementById("result").innerHTML =  "LIKES "+0;
	}
	else
		{

			document.getElementById("result").innerHTML =  "LIKES "+localStorage.like;
		}
       
if (localStorage.dl == "undefined") 
        {
		document.getElementById("result1").innerHTML =  "DISLIKES "+0;
	}
	else
		{

			document.getElementById("result1").innerHTML =  "DISLIKES "+localStorage.dl;
		}
        
    } else {
        document.getElementById("result1").innerHTML = "Sorry, your browser does not support web storage...";
    }
}
</script>
	<image src="https://pbs.twimg.com/profile_images/718314968102367232/ypY1GPCQ_400x400.jpg" height="400" width="400">
<p><button id="result" onclick="likes()" type="button">LIKE</button>
<button id="result1" onclick="dislike()" type="button" style="margin-left:100px;">DISLIKE</button></p>
</body>
</html>
